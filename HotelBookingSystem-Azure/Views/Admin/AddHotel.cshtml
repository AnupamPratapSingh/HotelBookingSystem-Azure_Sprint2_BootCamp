@model HotelBookingSystem_Azure.Models.Hotel

@{ ViewData["Title"] = "Add Hotel Details"; }

<form method="post" asp-controller="Admin" asp-action="AddHotel">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="hotel_id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="hotel_id" class="form-control" />
                        <span asp-validation-for="hotel_id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="city"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="city" class="form-control" />
                        <span asp-validation-for="city" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="hotel_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="hotel_name" class="form-control" />
                        <span asp-validation-for="hotel_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="address" class="form-control" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="avg_rate_per_nigh"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="avg_rate_per_nigh" class="form-control" />
                        <span asp-validation-for="avg_rate_per_nigh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="phone_no1"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="phone_no1" class="form-control" />
                        <span asp-validation-for="phone_no1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="phone_no2"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="phone_no2" class="form-control" />
                        <span asp-validation-for="phone_no2" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="rating"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="rating" class="form-control" />
                        <span asp-validation-for="rating" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="fax"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="fax" class="form-control" />
                        <span asp-validation-for="fax" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
        <a class="nav-link text-black-50 btn-outline-primary font-weight-bolder" style="position: relative; margin:10px;background-color: beige;float: right" asp-controller="Admin" asp-action="HotelList">Get Hotel List </a>
                        <script type="text/javascript">
                                      window.onload=function(){
                                          alert("@ViewBag.Message");
                                      };
                        </script>}
                </div>
            </div>
        </div>
    </div>
</form>