@model HotelBookingSystem_Azure.Models.BookingDetails

@{ ViewData["Title"] = "Booking Approval"; }

<form method="post" asp-controller="Admin" asp-action="ApproveBooking">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="booking_id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booking_id" class="form-control" />
                        <span asp-validation-for="booking_id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="room_id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="room_id" class="form-control" />
                        <span asp-validation-for="room_id" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="user_id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="user_id" class="form-control" />
                        <span asp-validation-for="user_id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="booked_from"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booked_from" class="form-control" />
                        <span asp-validation-for="booked_from" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="booked_to"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booked_to" class="form-control" />
                        <span asp-validation-for="booked_to" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="no_of_adults"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="no_of_adults" class="form-control" />
                        <span asp-validation-for="no_of_adults" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="no_of_children"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="no_of_children" class="form-control" />
                        <span asp-validation-for="no_of_children" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="amount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="amount" class="form-control" />
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">

                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Approve" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
        <a class="nav-link text-black-50 btn-outline-primary font-weight-bolder" style="position: relative; margin:10px;background-color: beige;float: right" asp-controller="Admin" asp-action="Report">Get report </a>
                        <script type="text/javascript">
                                      window.onload=function(){
                                          alert("@ViewBag.Message");
                                      };
                        </script>
}
                </div>
            </div>
        </div>
    </div>
</form>