@model IEnumerable<HotelBookingSystem_Azure.Models.BookingDetails>

@{
    ViewData["Title"] = "Report";
}


<div>
    <h2 class="text-primary">Report</h2>
</div>

<div class="container p-3" style="background-color:azure">
    <

    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="Admin" asp- asp-action="Report">Hotel List</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        booking_id
                    </th>
                    <th>
                        room_id
                    </th>
                    <th>
                        user_id
                    </th>
                    <th>
                        booked_from
                    </th>
                    <th>
                        booked_to
                    </th>
                    <th>
                        no_of_adults
                    </th>
                    <th>
                        no_of_children
                    </th>
                    <th>
                        amount
                    </th>
                    
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.booking_id</td>
                        <td>@detail.room_id</td>
                        <td>@detail.user_id</td>
                        <td>@detail.booked_from</td>
                        <td>@detail.booked_to</td>
                        <td>@detail.no_of_adults</td>
                        <td>@detail.no_of_children</td>
                        <td>@detail.amount</td>
                        


                    </tr>
                }
            </tbody>
        </table>
    }
</div>