@model IEnumerable<HotelBookingSystem_Azure.Models.RoomDetails>

@{
    ViewData["Title"] = "RoomList";
}


<div>
    <h2 class="text-primary">Room List</h2>
</div>

<div class="container p-3" style="background-color:azure">
    <

    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="User" asp- asp-action="RoomList">Room List</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        room_no
                    </th>
                    <th>
                        room_type
                    </th>
                    <th>
                        per_night_rate
                    </th>
                    <th>
                        availability
                    </th>
                    <th>
                        hotel_id
                    </th>
                    
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.room_no</td>
                        <td>@detail.room_type</td>
                        <td>@detail.per_night_rate</td>
                        <td>@detail.availability</td>
                        <td>@detail.hotel_id</td>
                       

                    </tr>
                }
            </tbody>
        </table>
    }
</div>