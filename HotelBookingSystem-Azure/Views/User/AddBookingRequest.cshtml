@model HotelBookingSystem_Azure.Models.BookingRequest

@{ ViewData["Title"] = "Add Booking Request"; }

<form method="post" style="background-color:azure" asp-controller="User" asp-action="AddBookingRequest">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Booking_id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Booking_id" class="form-control" />
                        <span asp-validation-for="Booking_id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="hotel_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="hotel_name" class="form-control" />
                        <span asp-validation-for="hotel_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="user_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="user_name" class="form-control" />
                        <span asp-validation-for="user_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="room_type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="room_type" class="form-control" />
                        <span asp-validation-for="room_type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="booked_from"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booked_from" class="form-control" />
                        <span asp-validation-for="booked_from" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="booked_to"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booked_to" class="form-control" />
                        <span asp-validation-for="booked_to" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="no_of_adults"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="no_of_adults" class="form-control" />
                        <span asp-validation-for="no_of_adults" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="no_of_children"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="no_of_children" class="form-control" />
                        <span asp-validation-for="no_of_children" class="text-danger"></span>
                    </div>
                </div>
                

               
                <div class="form-group row">

                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
        <a class="nav-link text-black-50 btn-outline-primary font-weight-bolder" style="position: relative; margin:10px;background-color: beige;float: right" asp-controller="Admin" asp-action="BookingRequestList">Get Request List </a>
                        <script type="text/javascript">
                                      window.onload=function(){
                                          alert("@ViewBag.Message");
                                      };
                        </script>
}
                </div>
            </div>
        </div>
    </div>
</form>